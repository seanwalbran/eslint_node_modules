# -*- encoding: utf-8 -*-

Gem::Specification.new do |s|
  s.name        = 'eslint_node_modules'
  s.version     = '1.6.0.1'
  s.platform    = Gem::Platform::RUBY
  s.author      = 'Sean Walbran'
  s.email       = 'seanwalbran@yahoo.com'
  s.homepage    = 'https://github.com/seanwalbran/eslint_node_modules'
  s.summary     = 'The ESLint node modules'
  s.description = 'The ESLint node modules'
  s.license     = 'Various'

  s.required_rubygems_version = '>= 1.3.6'

  s.add_development_dependency 'rake', '~> 10'
  s.add_development_dependency 'bundler', '~> 1'

  s.files        = Dir['bin/*', 'lib/**/*', 'vendor/**/*', 'README.md']
  s.executables << 'eslint'
  s.require_path = 'lib'
end
